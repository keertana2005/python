def bubble_sort(arr):
    n = len(arr)
    num_swaps = 0
    for i in range(n):
        swapped = False
        for j in range(0, n-i-1):
            if arr[j] > arr[j+1]:
                # Swap the elements
                arr[j], arr[j+1] = arr[j+1], arr[j]
                num_swaps += 1
                swapped = True
        if not swapped:
            break
    return num_swaps
n = int(input())
arr = list(map(int, input().split()))
num_swaps = bubble_sort(arr)
print("List is sorted in", num_swaps, "swaps.")
print("First Element:", arr[0])
print("Last Element:", arr[-1])
